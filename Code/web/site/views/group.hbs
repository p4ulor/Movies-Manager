<div class="text-center">
    <form method="POST" action={{updateGroupRoute}}>
        <h2>Name: 
            <span id="hide"></span>
            <input id="txt" name="groupName" value="{{groupName}}" style="border: none;"></input> {{!-- The " " is neccessary or it only shows the first chars before the first space (no further chars after the first space)  --}}
        </h2>

        <h3>Description:</h3>
        <textarea name="groupDescription" style="border: none;">{{groupDescription}}</textarea>
        </br>
        
        <button type="submit">Update group details</button>
    </form>

    <h3>Total duration: {{totalDuration}}</h3>

    <h4>Movies:</h4>
    {{#each movies}}
        {{> movieItem}} {{!-- The '> group' says that this variable is to be interpreted as a .hbs view --}}
        <hr>
    {{/each}}

    <form method="POST" action="{{host}}{{deleteGroupRoute}}"></formmethod>
        <button type="submit" >Delete this group</button>
    </form>
</div>

